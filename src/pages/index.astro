---
import Layout from '../layouts/Layout.astro'
import fetchData from '../lib/fetchData'
import Search from '../components/Search.astro'

const pokemon = await fetchData()
---

<Layout title='Unbound Pokedex'>
  <main>
    <h1>{pokemon.SPECIES_AEGISLASH.name}</h1>
    <Search pokemon={pokemon} />
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1.5rem;
    max-width: 60ch;
  }
  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }
</style>

